@model List<OfficeSuit.Models.Attendance>

@{
    Layout = "~/Views/Shared/_DashboardLayout.cshtml";
    TempData["Title"] = "Attendance";
}

<div class="container mt-4">
    <h2>📅 Attendance - @ViewBag.ProjectName</h2>

    @if (Model.Any())
    {
        <table class="table table-bordered table-striped mt-3">
            <thead class="table-dark">
                <tr>
                    <th>#</th>
                    <th>User Name</th>
                    <th>Date</th>
                    <th>Status</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var att in Model)
                {
                    <tr>
                        <td>@att.AttendanceId</td>
                        <td>@att.UserName</td>
                        <td>@att.Date.ToString("dd-MMM-yyyy")</td>
                        <td>
                            @if (att.Status == 1)
                            {
                                <span class="badge bg-success">Present</span>
                            }
                            else
                            {
                                <span class="badge bg-danger">Absent</span>
                            }
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    }
    else
    {
        <p class="text-warning mt-3">No attendance records found.</p>
    }
</div>
