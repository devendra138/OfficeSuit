@model OfficeSuit.Models.Tasks;
@{

    Layout = "~/Views/Shared/_DashboardLayout.cshtml";
    TempData["Title"] = "Tasks";
    var tasks = ViewBag.Tasks as List<OfficeSuit.Models.Tasks> ?? new List<OfficeSuit.Models.Tasks>();
    var resources = ViewBag.Resources as List<OfficeSuit.Models.ProjectResource> ?? new List<OfficeSuit.Models.ProjectResource>();
}

<div class="container mt-4">
    <div class="d-flex justify-content-between align-items-center mb-3">
        <h2>📋 Tasks</h2>
        <button class="btn btn-primary" data-bs-toggle="modal" data-bs-target="#addTaskModal">
            ➕ Add Task
        </button>
    </div>

    @if (tasks.Any())
    {
        <table class="table table-bordered table-striped mt-3">
            <thead class="table-dark">
                <tr>
                    <th>Task Name</th>
                    <th>Description</th>
                    <th>Assigned To</th>
                    <th>Start Date</th>
                    <th>End Date</th>
                    <th>Status</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var task in tasks)
                {
                    <tr>
                        <td>@task.TaskName</td>
                        <td>@task.Description</td>
                        <td>@task.AssignTo</td>
                        <td>@task.StartDate.ToShortDateString()</td>
                        <td>@task.EndDate.ToShortDateString()</td>
                        <td>
                            @{
                                string statusText = task.Status switch
                                {
                                    "1" => "Not Started",
                                    "2" => "Started",
                                    "3" => "Pending",
                                    "4" => "Completed",
                                    _ => "Unknown"
                                };
                            }
                            @statusText
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    }
    else
    {
        <p class="text-warning">No tasks found for this project.</p>
    }
</div>

<!-- Modal -->
<div class="modal fade" id="addTaskModal" tabindex="-1" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title">Add Task</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
            </div>
            <div class="modal-body">
                <form asp-action="AddTask" method="post">
                    <input type="hidden" name="ProjectId" value="@ViewBag.ProjectId" />

                    <div class="mb-3">
                        <label class="form-label">Task Name</label>
                        <input type="text" name="TaskName" class="form-control" required />
                    </div>

                    <div class="mb-3">
                        <label asp-for="Description" class="form-label"></label>
                        <textarea asp-for="Description" class="form-control"></textarea>
                        <span asp-validation-for="Description" class="text-danger"></span>
                    </div>

                    <div class="mb-3">
                        <label class="form-label">Assign To</label>
                        <select name="UserId" class="form-select" required>
                            <option value="">-- Select User --</option>
                            @foreach (var user in resources)
                            {
                                <option value="@user.Id">@user.UserName</option>
                            }
                        </select>
                    </div>

                    <div class="mb-3">
                        <label class="form-label">Start Date</label>
                        <input type="date" name="StartDate" class="form-control" required />
                    </div>

                    <div class="mb-3">
                        <label class="form-label">End Date</label>
                        <input type="date" name="EndDate" class="form-control" required />
                    </div>

                    <div class="mb-3">
                        <label class="form-label">Status</label>
                        <select name="Status" class="form-select" required>
                            <option value="1">Not Started</option>
                            <option value="2">Started</option>
                            <option value="3">Pending</option>
                            <option value="4">Completed</option>
                        </select>
                    </div>

                    <button type="submit" class="btn btn-success">Save</button>
                </form>
            </div>
        </div>
    </div>
</div>
