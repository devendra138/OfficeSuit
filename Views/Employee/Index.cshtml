@model OfficeSuit.Models.Tasks
@{
    Layout = "~/Views/Shared/_DashboardLayout.cshtml";
    ViewData["Title"] = "Employee";
}

<h2>Task Details</h2>

<div>
    <h4>@Model.TaskName</h4>
    <p><strong>Description:</strong> @Model.Description</p>
    <p><strong>Start Date:</strong> @Model.StartDate.ToShortDateString()</p>
    <p><strong>Due Date:</strong> @Model.EndDate.ToShortDateString()</p>
    <p>
        <strong>Status:</strong> @{
        string statusText = Model.Status switch
        {
            "1" => "Not Started",
            "2" => "Started",
            "3" => "Pending",
            "4" => "Completed",
            _ => "Unknown"
        };
                }
        @statusText
    </p>
    <p><strong>Project Id:</strong> @Model.ProjectId</p>
</div>

<!-- Button to open modal -->
<button type="button" class="btn btn-warning" data-bs-toggle="modal" data-bs-target="#updateStatusModal">
    Update Status
</button>
<a asp-action="Index" asp-route-id="@ViewBag.ProjectId" class="btn btn-secondary">Back to Project</a>

<!-- Modal -->
<div class="modal fade" id="updateStatusModal" tabindex="-1" aria-labelledby="updateStatusModalLabel" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <form asp-action="EditStatus" method="post">
                <div class="modal-header">
                    <h5 class="modal-title" id="updateStatusModalLabel">Update Task Status</h5>
                    <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                </div>

                <div class="modal-body">
                    <input type="hidden" name="id" value="@Model.TaskId" />

                    <div class="form-group">
                        <label for="status">Status</label>
                        <select name="status" class="form-control">
                            <option value="1" selected="@(Model.Status == "Not Started")">Not Started</option>
                            <option value="2" selected="@(Model.Status == "In Progress")">Started</option>
                            <option value="3" selected="@(Model.Status == "Completed")">Pending</option>
                            <option value="4" selected="@(Model.Status == "On Hold")">Completed</option>
                        </select>
                    </div>
                </div>

                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
                    <button type="submit" class="btn btn-primary">Save changes</button>
                </div>
            </form>
        </div>
    </div>
</div>