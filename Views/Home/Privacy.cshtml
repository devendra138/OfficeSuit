@{
    TempData["Title"] = "Privacy Policy";
}

<div class="privacy-container">
    <!-- Hero Section -->
    <div class="privacy-hero">
        <h1>Our <span class="highlight">Privacy Policy</span></h1>
        <p>Your privacy is our top priority. Learn how we protect your data.</p>
    </div>

    <!-- Features Section -->
    <div class="privacy-features">
        <div class="feature">
            <i class="fa-solid fa-shield-halved"></i>
            <h3>Data Protection</h3>
            <p>We use industry-standard encryption to safeguard your data.</p>
        </div>
        <div class="feature">
            <i class="fa-solid fa-cookie-bite"></i>
            <h3>Cookies</h3>
            <p>We only use cookies to enhance your browsing experience.</p>
        </div>
        <div class="feature">
            <i class="fa-solid fa-user-shield"></i>
            <h3>Your Rights</h3>
            <p>You can request, download, or delete your data anytime.</p>
        </div>
    </div>

    <!-- Accordion Section -->
    <div class="privacy-accordion">
        <button class="accordion">📌 Information We Collect</button>
        <div class="panel">
            <p>We collect basic user data like name, email, and usage patterns.</p>
        </div>

        <button class="accordion">📌 How We Use Your Data</button>
        <div class="panel">
            <p>Your data is used to improve services, ensure security, and personalize your experience.</p>
        </div>

        <button class="accordion">📌 Contact Us</button>
        <div class="panel">
            <p>If you have questions, email us at <b>support@officesuit.com</b></p>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        // Accordion JS
        const acc = document.querySelectorAll(".accordion");
        acc.forEach(button => {
            button.addEventListener("click", function () {
                this.classList.toggle("active");
                let panel = this.nextElementSibling;
                if (panel.style.maxHeight) {
                    panel.style.maxHeight = null;
                    panel.style.padding = "0 20px";
                } else {
                    panel.style.maxHeight = panel.scrollHeight + "px";
                    panel.style.padding = "15px 20px";
                }
            });
        });
    </script>
}
