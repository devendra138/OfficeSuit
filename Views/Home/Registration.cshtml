@model OfficeSuit.Models.UserInfo

@{
    ViewData["Title"] = "User Registration";
    Layout = "~/Views/Shared/_Layout.cshtml"; // Optional, depending on your layout
}

<!-- Include Animate.css CDN -->
<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/animate.css/4.1.1/animate.min.css" />
<link rel="stylesheet" href="~/css/Registration.css">

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-8 animate__animated animate__fadeInUp">
            <div class="card-form">
                <div class="text-center mb-4">
                    <div class="form-title">User Information Form</div>
                </div>

                <form asp-action="UserRegistration" method="post">
                    <div class="row g-3">

                        <div class="col-md-6">
                            <label asp-for="FirstName" class="form-label"></label>
                            <input asp-for="FirstName" class="form-control" />
                            <span asp-validation-for="FirstName" class="text-danger small"></span>
                        </div>

                        <div class="col-md-6">
                            <label asp-for="LastName" class="form-label"></label>
                            <input asp-for="LastName" class="form-control" />
                            <span asp-validation-for="LastName" class="text-danger small"></span>
                        </div>

                        <div class="col-md-6">
                            <label asp-for="Email" class="form-label"></label>
                            <input asp-for="Email" class="form-control" />
                            <span asp-validation-for="Email" class="text-danger small"></span>
                        </div>

                        <div class="col-md-6">
                            <label asp-for="Password" class="form-label"></label>
                            <input asp-for="Password" class="form-control" />
                            <span asp-validation-for="Password" class="text-danger small"></span>
                        </div>

                        <div class="col-md-6">
                            <label asp-for="Contact" class="form-label"></label>
                            <input asp-for="Contact" class="form-control" />
                            <span asp-validation-for="Contact" class="text-danger small"></span>
                        </div>

                        <div class="col-md-6">
                            <label asp-for="Gender" class="form-label"></label>
                            <select asp-for="Gender" class="form-select">
                                <option value="">-- Select Gender --</option>
                                <option>Male</option>
                                <option>Female</option>
                                <option>Other</option>
                            </select>
                            <span asp-validation-for="Gender" class="text-danger small"></span>
                        </div>

                        <div class="col-md-6">
                            <label asp-for="Designation" class="form-label"></label>
                            <input asp-for="Designation" class="form-control" />
                            <span asp-validation-for="Designation" class="text-danger small"></span>
                        </div>

                        <div class="col-12 mt-3">
                            <button type="submit" class="btn btn-custom px-4">Submit</button>
                            <a asp-action="Index" class="btn btn-outline-secondary ms-2">Cancel</a>
                        </div>

                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
