@model OfficeSuit.Models.UserInfo

@{
    TempData["Title"] = "User Registration";
    Layout = "~/Views/Shared/_Layout.cshtml"; // Optional, depending on your layout
}

<script>
    @if (TempData["Success"] != null)
    {
        var message = TempData["Success"].ToString();
        <text>
            Swal.fire({
                icon: 'success',
                title: 'Success',
                text: '@message'
            });
        </text>
    }

    @if (TempData["Info"] != null)
    {
        var message = TempData["Info"].ToString();
        <text>
            Swal.fire({
                icon: 'info',
                title: 'Info',
                text: '@message'
            });
        </text>
    }

    @if (TempData["Error"] != null)
    {
        var message = TempData["Error"].ToString();
        <text>
            Swal.fire({
                icon: 'error',
                title: 'Error',
                text: '@message'
            });
        </text>
    }
</script>

<!-- Include Animate.css CDN -->
<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/animate.css/4.1.1/animate.min.css" />
<link href="~/css/registration.css" rel="stylesheet" />

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-8 animate__animated animate__fadeInUp">
            <div class="card-border-wrapper">
                <div class="card-form">
                    <div class="text-center mb-4">
                        <div class="form-title glow-text">Registration Form</div>
                        <div class="divider"></div>
                    </div>

                    <form asp-action="UserRegistration" method="post">
                        <div class="row g-3">

                            <div class="col-md-6">
                                <label asp-for="FirstName" class="form-label"></label>
                                <input asp-for="FirstName" class="form-control" />
                                <span asp-validation-for="FirstName" class="text-danger small"></span>
                            </div>

                            <div class="col-md-6">
                                <label asp-for="LastName" class="form-label"></label>
                                <input asp-for="LastName" class="form-control" />
                                <span asp-validation-for="LastName" class="text-danger small"></span>
                            </div>

                            <div class="col-md-6">
                                <label asp-for="Email" class="form-label"></label>
                                <input asp-for="Email" class="form-control" />
                                <span asp-validation-for="Email" class="text-danger small"></span>
                            </div>

                            <div class="col-md-6">
                                <label asp-for="Password" class="form-label"></label>
                                <input asp-for="Password" class="form-control" />
                                <span asp-validation-for="Password" class="text-danger small"></span>
                            </div>

                            <div class="col-md-6">
                                <label asp-for="Contact" class="form-label"></label>
                                <input asp-for="Contact" class="form-control" />
                                <span asp-validation-for="Contact" class="text-danger small"></span>
                            </div>

                            <div class="col-md-6">
                                <label asp-for="Gender" class="form-label"></label>
                                <select asp-for="Gender" class="form-select">
                                    <option value="">-- Select Gender --</option>
                                    <option>Male</option>
                                    <option>Female</option>
                                    <option>Other</option>
                                </select>
                                <span asp-validation-for="Gender" class="text-danger small"></span>
                            </div>

                            <div class="col-md-6">
                                <label asp-for="DesignationId" class="form-label"></label>
                                <select asp-for="DesignationId" class="form-select" asp-items="ViewBag.DesignationList">
                                    <option value="">-- Select Designation --</option>
                                </select>
                                <span asp-validation-for="DesignationId" class="text-danger small"></span>
                            </div>

                            <div class="col-12 mt-3">
                                <div class="text-center">
                                    <button type="submit" class="btn btn-custom px-4 me-2">Submit</button>
                                    <a asp-action="Index" class="btn btn-danger">Cancel</a>
                                </div>
                            </div>

                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
