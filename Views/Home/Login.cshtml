@{
    ViewData["Title"] = "Login";
}
<head>

    <script>
        @if (TempData["Info"] != null)
        {
                var message = TempData["Info"].ToString();
                var iconType = message == "Login Successful." ? "success" : "error";
            <text>
                Swal.fire({
                    icon: '@iconType',
                    title: '@(iconType == "success" ? "Success" : "Error")',
                    text: '@message'
                });
            </text>
        }
    </script>

</head>
<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" />
<style>
    body {
        background: linear-gradient(135deg, #74ebd5, #9face6);
        font-family: 'Poppins', sans-serif;
        animation: fadeInBody 1s ease-in;
    }

    @@keyframes fadeInBody {
        from {
            opacity: 0;
        }

        to {
            opacity: 1;
        }
    }

    .login-card {
        background: #fff;
        padding: 40px 30px;
        border-radius: 20px;
        box-shadow: 0 10px 30px rgba(0,0,0,0.1);
        animation: slideIn 0.8s ease-out;
    }

    @@keyframes slideIn {
        from {
            opacity: 0;
            transform: translateY(40px);
        }

        to {
            opacity: 1;
            transform: translateY(0);
        }
    }

    .login-card h3 {
        text-align: center;
        margin-bottom: 30px;
        color: #4a4a4a;
        font-weight: 600;
    }

    .form-control:focus {
        box-shadow: 0 0 0 0.2rem rgba(116, 235, 213, 0.5);
        border-color: #74ebd5;
    }

    .btn-primary {
        background-color: #74ebd5;
        border-color: #74ebd5;
        font-weight: 600;
        transition: background-color 0.3s ease;
    }

        .btn-primary:hover {
            background-color: #5ed0c5;
            border-color: #5ed0c5;
        }
</style>

<div class="d-flex justify-content-center align-items-center min-vh-100">
    <div class="login-card w-100" style="max-width: 420px;">
        <h3>🔐 Login to Your Account</h3>
        <form method="post" asp-controller="Home" asp-action="LoginUser">
            <div class="mb-3">
                <label for="Username" class="form-label">Username</label>
                <input type="text" class="form-control" id="Username" name="Username" required placeholder="Enter your username" />
            </div>
            <div class="mb-3">
                <label for="Password" class="form-label">Password</label>
                <input type="password" class="form-control" id="Password" name="Password" required placeholder="Enter your password" />
            </div>
            <div class="d-grid">
                <button type="submit" class="btn btn-primary">Login</button>
            </div>
        </form>
        <div class="login-footer">
            <p>Don't have an account? <a href="#">Register</a></p>
        </div>
    </div>
</div>
