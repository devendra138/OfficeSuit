<!-- Analog Clock Script -->
<script>
    // Add tick marks dynamically
    const clock = document.getElementById("analogClock");
    for (let i = 0; i < 60; i++) {
        const tick = document.createElement("div");
        tick.className = "tick";
        if (i % 5 === 0) tick.classList.add("hour-mark");
        tick.style.transform = `rotate(${i * 6}deg) translateX(-50%)`;
        clock.appendChild(tick);
    }

    function updateAnalogClock() {
        const now = new Date();
        const second = now.getSeconds();
        const minute = now.getMinutes();
        const hour = now.getHours();

        const secondDeg = ((second / 60) * 360);
        const minuteDeg = ((minute / 60) * 360) + ((second / 60) * 6);
        const hourDeg = ((hour % 12) / 12 * 360) + ((minute / 60) * 30);

        document.getElementById("second").style.transform = `rotate(${secondDeg}deg) translateX(0%)`;
        document.getElementById("minute").style.transform = `rotate(${minuteDeg}deg) translateX(0%)`;
        document.getElementById("hour").style.transform = `rotate(${hourDeg}deg) translateX(0%)`;
    }

    setInterval(updateAnalogClock, 1000);
    updateAnalogClock();
</script>