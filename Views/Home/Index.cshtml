@{
    TempData["Title"] = "Dashboard";
}
<head>
    <link rel="stylesheet" href="~/css/Homepage.css">
</head>

<body>
    <div class="container my-5">
        <div class="hero-section">

            <div class="hero-overlay text-center mb-5">
                <h1 class="display-4">Your Modern Office Suite</h1>
                <p class="lead">Collaborate, Create, and Organize – All in One Place</p>
                <a href="/Home/Login" class="btn btn-primary me-2">Login</a>
                <a href="/Home/Registration" class="btn btn-info">Get Started</a>
            </div>

            <div class="row text-center">
                <div class="col-md-4 d-flex align-items-stretch">
                    <div class="w-100 shadow p-3 rounded card-hover-box">
                        <img src="/Data/Images/Icon_project.png" alt="Docs" class="img-fluid mb-3" />
                        <h4>Project</h4>
                        <p>Create, Manage the project efficiently.</p>
                    </div>
                </div>

                <div class="col-md-4 d-flex align-items-stretch">
                    <div class="w-100 shadow p-3 rounded card-hover-box">
                        <img src="/Data/Images/Icon_Management.jpg" alt="Sheets" class="img-fluid mb-3" />
                        <h4>Management</h4>
                        <p>Manage team, software development life cycle, planning and tracking the progress.</p>
                    </div>
                </div>

                <div class="col-md-4 d-flex align-items-stretch">
                    <div class="w-100 shadow p-3 rounded card-hover-box">
                        <img src="/Data/Images/img_Calendar.jpg" alt="Calendar" class="img-fluid mb-3" />
                        <h4>Timesheet</h4>
                        <p>Stay organized with Timesheet which helps in auto attendance for employees.</p>
                    </div>
                </div>
            </div>

            <hr class="my-5" />

            <!-- Work Smarter Section (Clock Removed) -->
            <div class="row align-items-center justify-content-center my-5">
                <div class="col-md-8 text-center">
                    <h2>Work Smarter, Together</h2>
                    <p>Built for teams. Designed for productivity.</p>
                    <a href="/Home/Registration" class="btn btn-success">Register</a>
                </div>
            </div>

        </div>
    </div>
</body>
