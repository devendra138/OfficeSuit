<head>
    <link rel="stylesheet" href="~/css/Homepage.css">
    <style>
        /* Analog Clock Style */
        .clock {
            width: 200px;
            height: 200px;
            border: 8px solid #28a745;
            border-radius: 50%;
            position: relative;
            margin: 20px auto;
            background: white;
        }
        /* Common Hand Style */
        .hand {
            position: absolute;
            width: 50%;
            height: 2px;
            background: black;
            top: 50%;
            left: 50%;
            transform-origin: 0% 50%;
            transform: rotate(90deg);
            transition: transform 0.5s cubic-bezier(0.4, 2.3, 0.3, 1);
        }

            .hand.hour {
                width: 30%;
                height: 5px;
                background: #333;
            }

            .hand.minute {
                width: 40%;
                height: 4px;
                background: #28a745;
            }

            .hand.second {
                width: 45%;
                height: 2px;
                background: red;
            }

        .center-circle {
            width: 14px;
            height: 14px;
            background: black;
            border-radius: 50%;
            position: absolute;
            top: 50%;
            left: 50%;
            transform: translate(-50%, -50%);
            z-index: 10;
        }
        /* Numbers inside clock */
        .number {
            position: absolute;
            font-size: 16px;
            font-weight: bold;
            color: #333;
            transform: translate(-50%, -50%);
        }

        .num1 {
            top: 20%;
            left: 72%;
        }

        .num2 {
            top: 34%;
            left: 87%;
        }

        .num3 {
            top: 50%;
            left: 93%;
        }

        .num4 {
            top: 66%;
            left: 87%;
        }

        .num5 {
            top: 80%;
            left: 72%;
        }

        .num6 {
            top: 88%;
            left: 50%;
        }

        .num7 {
            top: 80%;
            left: 28%;
        }

        .num8 {
            top: 66%;
            left: 13%;
        }

        .num9 {
            top: 50%;
            left: 7%;
        }

        .num10 {
            top: 34%;
            left: 13%;
        }

        .num11 {
            top: 20%;
            left: 28%;
        }

        .num12 {
            top: 12%;
            left: 50%;
        }

        /* Tick Marks */
        .tick {
            position: absolute;
            width: 2px;
            height: 10px;
            background: #333;
            top: 0;
            left: 50%;
            transform-origin: center 95px; /* radius */
        }

            .tick.hour-mark {
                height: 14px;
                background: #000;
            }

        /* Optional: Responsive adjustments */
        @@media (max-width: 768px) {
            .clock {
                width: 160px;
                height: 160px;
            }

            .number {
                font-size: 14px;
            }
        }
    </style>
</head>

