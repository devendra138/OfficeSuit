@{
    TempData["Title"] = "About";
}

<head>
    <link rel="stylesheet" href="~/css/About.css" />
</head>

<body>
    <!-- Hero Section -->
    <section class="about-hero text-center text-white d-flex align-items-center">
        <div class="container">
            <h1 class="display-4 fw-bold">About <span class="highlight">OfficeSuit</span></h1>
            <p class="lead">Empowering teams to collaborate, innovate, and grow together.</p>
        </div>
    </section>

    <!-- Company Story -->
    <section class="py-5 bg-light">
        <div class="container text-center">
            <h2 class="fw-bold mb-4">Our Story</h2>
            <p class="text-muted w-75 mx-auto">
                Founded with a vision to simplify work, OfficeSuit brings powerful tools for project
                management, business insights, and team collaboration. We believe in building software
                that helps businesses grow smarter, faster, and more efficiently.
            </p>
        </div>
    </section>

    <!-- Mission, Vision, Values -->
    <section class="py-5">
        <div class="container">
            <div class="row g-4 text-center">
                <div class="col-md-4">
                    <div class="about-card p-4 shadow-sm rounded">
                        <img src="/Data/Images/mission.png" class="mb-3" alt="Mission" height="70" />
                        <h4 class="fw-bold">Our Mission</h4>
                        <p class="text-muted">To empower every business with tools that simplify work and inspire growth.</p>
                    </div>
                </div>
                <div class="col-md-4">
                    <div class="about-card p-4 shadow-sm rounded">
                        <img src="/Data/Images/vision.png" class="mb-3" alt="Vision" height="70" />
                        <h4 class="fw-bold">Our Vision</h4>
                        <p class="text-muted">To be the world’s most trusted productivity platform for businesses of all sizes.</p>
                    </div>
                </div>
                <div class="col-md-4">
                    <div class="about-card p-4 shadow-sm rounded">
                        <img src="/Data/Images/values.png" class="mb-3" alt="Values" height="70" />
                        <h4 class="fw-bold">Our Values</h4>
                        <p class="text-muted">Innovation, collaboration, and integrity drive everything we do.</p>
                    </div>
                </div>
            </div>
        </div>
    </section>

    <!-- Team Section -->
    <section class="py-5 bg-light">
        <div class="container text-center">
            <h2 class="fw-bold mb-4">Meet Our Team</h2>
            <div class="row g-4">
                <div class="col-md-3">
                    <div class="team-card shadow-sm rounded p-3">
                        <img src="/Data/Images/team1.jpg" class="rounded-circle mb-3" width="120" height="120" alt="Team Member">
                        <h5 class="fw-bold">Devendra Rawool</h5>
                        <p class="text-muted">CEO</p>
                    </div>
                </div>
                <div class="col-md-3">
                    <div class="team-card shadow-sm rounded p-3">
                        <img src="/Data/Images/team2.jpg" class="rounded-circle mb-3" width="120" height="120" alt="Team Member">
                        <h5 class="fw-bold">Darshan Rawool</h5>
                        <p class="text-muted">CTO</p>
                    </div>
                </div>
                <div class="col-md-3">
                    <div class="team-card shadow-sm rounded p-3">
                        <img src="/Data/Images/team3.jpg" class="rounded-circle mb-3" width="120" height="120" alt="Team Member">
                        <h5 class="fw-bold">Suprabha Gawas</h5>
                        <p class="text-muted">Head of Design</p>
                    </div>
                </div>
                <div class="col-md-3">
                    <div class="team-card shadow-sm rounded p-3">
                        <img src="/Data/Images/team4.jpg" class="rounded-circle mb-3" width="120" height="120" alt="Team Member">
                        <h5 class="fw-bold">Sumit kambli</h5>
                        <p class="text-muted">Project Manager</p>
                    </div>
                </div>
            </div>
        </div>
    </section>
</body>
